---
import MainLayout from "../layouts/mainLayout.astro";
import BaseLayout from "../layouts/baseLayout.astro";
import FormUser from "./components/formUser.astro";
import MatiasBio from "./matiasBio.astro";
import StefanoBio from "./stefanoBio.astro";
import GabrielBio from "./gabrielBio.astro";
---

<MainLayout title={"Contacto"}>
  <BaseLayout title={"Contacto"}>
  <h1>¬øQuienes somos?</h1>
  <p class="intro">
    ¬°Bienvenido a nuestro primer proyecto full stack! üöÄ Somos un equipo
    apasionado por la tecnolog√≠a y el aprendizaje continuo. Aqu√≠ podr√°s
    contactarnos, conocer m√°s sobre nosotros y dejar tus sugerencias para seguir
    mejorando. ¬°Gracias por visitar nuestra web y ser parte de este camino! üí°ü§ù
  </p>
  <section class="members">
    <a href="#" id="open-modal-stefano">Stefano Rea√±o</a>
    <a href="#" id="open-modal-matias">Matias Ezequiel</a>
    <a href="#" id="open-modal-gabriel">Gabriel Ledesma </a>
  </section>
  <StefanoBio id="modal-stefano" />
  <MatiasBio id="modal-matias" />
  <GabrielBio id="modal-gabriel" />
  <h1>Contactanos</h1>
  <footer>
    <FormUser
      title="Deja tu mensaje"
      buttonText="Enviar mensaje"
      successMessage="Mensaje enviado con exito"
      errorMessage="Error al enviar el mensaje"
      storageKey="contactData"
      validateDuplicates={false}
    >
      <div class="form-group">
        <label for="name">Nombre:</label>
        <input type="text" name="name" required />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" required />
      </div>
      <div class="form-group">
        <label for="text_Area">Mensaje</label>
        <textarea name="text_area" id="" required></textarea>
      </div>
    </FormUser>
  </footer>
  </BaseLayout>
</MainLayout>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const openStefano = document.getElementById("open-modal-stefano");
    const modalStefano = document.getElementById("modal-stefano");
    const closeStefano = document.getElementById("close-modal-stefano");
    openStefano.addEventListener("click", (e) => {
      e.preventDefault();
      modalStefano.style.display = "flex";
    });
    closeStefano.addEventListener("click", () => {
      modalStefano.style.display = "none";
    });

    const openMatias = document.getElementById("open-modal-matias");
    const modalMatias = document.getElementById("modal-matias");
    const closeMatias = document.getElementById("close-modal-matias");
    openMatias.addEventListener("click", (e) => {
      e.preventDefault();
      modalMatias.style.display = "flex";
    });
    closeMatias.addEventListener("click", (e) => {
      modalMatias.style.display = "none";
    });

    const openGabriel = document.getElementById("open-modal-gabriel");
    const modalGabriel = document.getElementById("modal-gabriel");
    const closeGabriel = document.getElementById("close-modal-gabriel");
    openGabriel.addEventListener("click", (e) => {
      e.preventDefault();
      modalGabriel.style.display = "flex";
    });
    closeGabriel.addEventListener("click", (e) => {
      modalGabriel.style.display = "none";
    });
  });
</script>

<style>
  html {
    margin: 0;
  }
  body {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  main, section {
    width: 90%;
    max-width: 1000px;
    padding: 0;
    margin: 0;
  }

  footer {
    max-width: 100%;
    margin-bottom: 1rem;
  }

  .intro, .members {
    margin: 2%;
    padding: 2rem;
    justify-self: center;
  }

  h1 {
    text-align: center;
    width: 100%;
    max-width: 100%;
    margin-top: 2rem;
    margin-bottom: 1.5rem;
    font-size: 2.2rem;
    letter-spacing: 1px;
    color: var(--primary);
    text-shadow: 0 2px 8px oklch(0.13 0.0691 279.86 / 0.15);
  }

  .intro {
    text-align: center;
    background: var(--accent);
    max-width: 100%;
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .members {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 100%;
    padding: 0;
    border-radius: 8px;
  }

  .members a {
    margin: 0.5rem 0;
    font-size: 1.1rem;
    color: var(--primary);
    text-decoration: underline;
    text-align: center;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 180px;
    flex: 1 1 0;
  }

  .form-group label {
    font-size: 1.5rem; 
    color: var(--text);
    margin-bottom: 10px; 
  }

  .form-group input,
  .form-group textarea {
    font-size: 2rem;
    width: 100%;
    height: 100%;
    background: var(--accent);
    color: var(--text);
    border-radius: 10px;
    min-width: 100%;
  }



/* Responsive */
  @media screen and (min-width: 1025px) {
    .members {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin: 2%;
  }
  .intro {
    font-size: 18px;
    margin: 2%;
    margin-bottom: 2rem;
  }
  footer {
    display: flex;
    align-items: center;
    margin: 2%;
    padding: 0;
  }
  }

  @media screen and (min-width: 768px) and (max-width: 1024px) {
  body {
    height: auto;
    align-items: center;
    justify-content: center;
    overflow-x: hidden;
  }

  main, section {
    width: 90%;
    max-width: 800px;
    margin: 0;
  }

  h1 {
    font-size: 2rem;
    text-align: center;
  }

  .intro {
    font-size: 1.2rem;
    margin: 2%;
    margin-bottom: 2rem;
  }

  .members {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin: 2%;
  }

  .members a {
    font-size: 1.3rem;
    text-align: center;
  }

  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 2%;
    padding: 0;
  }
}

 @media screen and (max-width: 480px) {
  body {
    height: auto;
    overflow-x: hidden;
  }

  main, section {
    margin: 0;
  }

  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    max-width: 480px;
  }
  h1 {
    font-size: 1.7rem;
    text-align: center;
  }

  .intro {
    font-size: 1rem;
    margin: 2%;
  }

  .members {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 2%;
  }

  .form-group {
    width: 100%;
  }

  .form-group input,
  .form-group textarea {
    font-size: 1rem;
    width: 100%;
    padding: 0.7rem;
  }

  .button-submit {
    width: 100%;
    font-size: 1.3rem;
  }
}

</style>
